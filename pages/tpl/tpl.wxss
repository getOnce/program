.hotel{
    width: 50%;
    float: left;
    box-sizing: border-box;
    margin-top: 10px;
    font-size: 12px;
    line-height: 20px;
}
.hotel .inner{
    margin: 0 0 10px 10px;
    display: block;
    background-color: #eee;
    height: 210px;
}
.picture image{
    width: 100%;
    height: auto;
}
.place{
    padding: 7px 5px 5px;
    font-weight: bold;
    font-size: 16px;

}
.price{
    padding: 0 0 0 5px;
}
.title{
    font-size: 14px;
    line-height: 24px;
    padding-left: 5px;
}
.fc-black{
    color: black;
}
.fc-yellow{
    color: green;
}
.loading{
    position: relative;
}
.loading:before{
    position: absolute;
    left: 0;
    width: 0;
    width: 100%;
    height: 100%;
    background-color: antiquewhite;
    content: 'loading...';
    text-align: center;
    line-height: 30px;
}